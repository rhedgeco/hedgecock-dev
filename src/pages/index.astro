---
import Console from "@components/Console.svelte";
import BaseLayout from "@layouts/BaseLayout.astro";

import { Image } from "astro:assets";
import githubDarkLogo from "@assets/icons/github-dark.png";
import githubWhiteLogo from "@assets/icons/github-white.png";
import youtubeLogo from "@assets/icons/youtube.png";
import linkedinLogo from "@assets/icons/linkedin.png";
---

<BaseLayout title="Home">
    <div class="hero max-w-5xl mx-auto">
        <div class="hero-content flex-col lg:flex-row items-start">
            <div class="space-y-4 px-4">
                <h1 class="text-4xl font-bold">
                    Hi! ðŸ‘‹<br />I'm Ryan Hedgecock
                </h1>
                <p>
                    I am a software engineer based in Cupertino, CA building
                    cool things in
                    <span class="text-[#E05B1A]">rust</span>,
                    <span class="text-[#885BD2]">c#</span>,
                    <span class="text-[#5CAD39]">python</span>, and
                    <span class="text-[#EADA3F]">more...</span>
                </p>
                <div class="join">
                    <a class="btn join-item" href="https://github.com/rhedgeco">
                        <Image
                            src={githubWhiteLogo}
                            alt=""
                            class="h-4 w-auto rounded-none dark-only"
                        />
                        <Image
                            src={githubDarkLogo}
                            alt=""
                            class="h-4 w-auto rounded-none light-only"
                        />Github
                    </a>
                    <a
                        class="btn join-item"
                        href="https://youtube.com/@rhedgeco"
                    >
                        <Image
                            src={youtubeLogo}
                            alt=""
                            class="h-4 w-auto rounded-none"
                        />Youtube
                    </a>
                    <a
                        class="btn join-item"
                        href="https://linkedin.com/in/rhedgeco/"
                    >
                        <Image
                            src={linkedinLogo}
                            alt=""
                            class="h-4 w-auto rounded-none"
                        />Linkedin
                    </a>
                </div>
            </div>
            <div class="space-y-4">
                <Console
                    prefix="[ryan]$ "
                    lines={[
                        "This website's main purpose is to be a playground for me to run automated server-side tasks.",
                        "",
                        "But thank you for stopping by! :)",
                        "",
                        "While you're here, Check out a few of my fun public routes below!",
                    ]}
                />
            </div>
        </div>
    </div>
</BaseLayout>
