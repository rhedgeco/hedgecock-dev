{
    "extends": "astro/tsconfigs/strict",
    "exclude": ["node_modules", "server"],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@content/*": ["src/content/*"],
            "@lib/*": ["src/lib/*"],
            "@pages/*": ["src/pages/*"]
        }
    }
}
