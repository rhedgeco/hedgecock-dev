{
    "name": "astro-blaster",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "setup": "yarn && cd server && cargo build",
        "astro": "astro",
        "build": "astro build",
        "frontend": "astro dev",
        "serve": "cargo watch -x 'shuttle run' --workdir server",
        "dev": "concurrently --kill-others --n frontend,server \"yarn frontend\" \"yarn serve\"",
        "preview": "yarn build && cargo shuttle run --working-directory server",
        "deploy": "yarn build && cargo shuttle deploy --working-directory server",
        "test": "yarn test:server && yarn test:frontend && yarn test:e2e",
        "test:frontend": "vitest run",
        "test:server": "cd server && cargo test && cd ..",
        "test:e2e": "npx playwright test && npx playwright show-report"
    },
    "dependencies": {
        "@astrojs/svelte": "^4.0.2",
        "@astrojs/tailwind": "^5.0.0",
        "@tailwindcss/typography": "^0.5.10",
        "astro": "^3.1.0",
        "daisyui": "^3.7.5",
        "sass": "^1.67.0",
        "svelte": "^4.0.0",
        "tailwindcss": "^3.0.24",
        "typescript": "^5.2.2",
        "vite": "^4.4.9",
        "ws": "^8.14.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.38.0",
        "@testing-library/jest-dom": "^6.1.3",
        "@testing-library/svelte": "^4.0.3",
        "@types/jest": "^29.5.5",
        "@types/node": "^20.6.3",
        "@vitest/ui": "^0.34.5",
        "concurrently": "^8.2.1",
        "jsdom": "^22.1.0",
        "prettier": "^3.0.3",
        "prettier-plugin-astro": "^0.12.0",
        "vitest": "^0.34.5"
    }
}
